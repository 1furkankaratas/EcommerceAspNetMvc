@model EcommerceAspNetMvc.Models.AddAddressViewModel
@{
    ViewBag.Title = "Adres Ekle";
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">


        @using (Html.BeginForm("AddAddress", "Account", FormMethod.Post))
        {

            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>Adres Ekleme</h2>
                    <small>Lütfen gerekli alanları doldurunuz</small>
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Address.Name, new { @class = "form-control", placeholder = "Adres adı", type = "text" })
                    </div>

                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Address.AdresDescription, new { @class = "form-control", placeholder = "Açık adres", type = "text" })
                    </div>


                </div>
                <div class="panel-footer text-right">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-log-in"></span> Kaydet
                    </button>

                </div>
            </div>
        }


    </div>
</div>

