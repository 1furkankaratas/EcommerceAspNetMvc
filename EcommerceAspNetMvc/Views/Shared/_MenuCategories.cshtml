@model List<EcommerceAspNetMvc.DB.Categories>




<ul class="nav navbar-nav">
    <li><a href="#">Link 1</a></li>
    <li><a href="#">Link 2</a></li>
    @foreach (var cat in Model)
{
    if (cat.Categories1.Any())
    {
        <li class="dropdown">
            <a class="dropdown-toggle" href="@Url.Action("index","Home",new {id=cat.Id})">@cat.Name<span class="caret"></span></a>
            @_MenuHelper.MenuRecursive(cat.Categories1.ToList())
        </li>
    }
    else
    {
        <li>
            <a href="@Url.Action("index","Home",new {id=cat.Id})">@cat.Name</a>
        </li>
    }
}
</ul>

