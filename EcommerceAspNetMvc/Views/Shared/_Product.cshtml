@model EcommerceAspNetMvc.DB.Products

<div class="row">
    <div class="col-md-4">
        <br />
        <img src="@(Model.ProductImageName.IsEmpty() ? "http://placehold.it/300x150":"/wwwroot/"+Model.ProductImageName )" />
    </div>
    <div class="col-md-8">

        <div class="form-group">

            <div class="col-md-6">
                <h2>@Model.Name</h2>
                <hr />
            </div>
            <div class="col-md-6 text-right">
                <h2 class="text-danger">@Model.Price ₺</h2>
                <hr />
            </div>

        </div>

        <div class="form-group">
            <p>@Model.Description</p>
        </div>

        <div class="form-group">
            <span class="text-danger">Derecelendirme :&nbsp;&nbsp;&nbsp;</span>
            <span class="text-warning">
                @{
                    var a = (int)Decimal.Floor((decimal)Model.StarPoint / Model.StarGivenMemberCount);

                }
                @for (int i = 0; i < a; i++)
                {
                    <span class="glyphicon glyphicon-star"></span>
                }
                @for (int i = 0; i < 5 - a; i++)
                {
                    <span class="glyphicon glyphicon-star-empty"></span>
                }

            </span>
        </div>

    </div>
</div>