@model EcommerceAspNetMvc.DB.Products

<div class="col-md-3 col-sm-4 col-xs-12">
    <div class="thumbnail">
        <img src="@(Model.ProductImageName.IsEmpty() ? "http://placehold.it/300x150":"/wwwroot/"+Model.ProductImageName )">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>@Model.Description</p>
            <p>
                <a href="" class="btn btn-success">
                    <span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Sepete Ekle
                </a>
                <a href="@Url.Action("Product","i",new {id=Model.Id})" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Bilgi
                </a>
            </p>
        </div>
    </div>
</div>